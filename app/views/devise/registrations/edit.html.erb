<div class="p-5">
  <%= link_to '<i class="bi bi-arrow-return-left"></i> Back'.html_safe, :back, class: "btn btn-info" %>
  <div class="register h-100 d-flex flex-column align-items-center justify-content-center p-4 extended-form-width m-auto shadow-sm rounded-4" >
    <h2 class="fw-bolder">Edit your profile</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="row">
        <div class="col-md field">
          <%= f.label :name, class: 'form-label text-muted' %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", required: true, class: 'form-control mb-3' %>
        </div>

        <div class="col-md field">
          <%= f.label :email, class: 'form-label text-muted' %><br />
          <%= f.email_field :email, autocomplete: "email", required: true, class: 'form-control mb-3' %>
        </div>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="row">
        <div class="col-md field">
          <%= f.label :password, class: 'form-label text-muted' %> <i class="text-muted">(leave blank if you don't want to change it)</i><br />
          <%= f.password_field :password, placeholder: 'adG23d', class: 'form-control mb-3' %>
        </div>

        <div class="col-md field">
          <%= f.label :password_confirmation, class: 'form-label text-muted' %>
          <% if @minimum_password_length %>
            <em class="text-muted">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password_confirmation, placeholder: 'adG23d', class: 'form-control mb-3' %>
        </div>
      </div>

      <%= f.fields_for(:user_summary, resource.user_summary || resource.build_user_summary) do |summary_form| %>
        <div class="row">
          <div class="col-md field">
            <%= summary_form.label :title, class: 'form-label text-muted' %>
            <em class="text-muted"> (optional)</em><br />
            <%= summary_form.text_field :title, placeholder: 'Software Engineer', class: 'form-control mb-3' %>
          </div>
          <div class="col-md field">
            <%= summary_form.label :twitter, class: 'form-label text-muted' %>
            <em class="text-muted"> (optional)</em><br />
            <%= summary_form.text_field :twitter, placeholder: 'Share your Twitter profile', class: 'form-control mb-3' %>
          </div>
        </div>

        <div class="row">
          <div class="col-md field">
            <%= summary_form.label :linked_in, class: 'form-label text-muted' %>
            <em class="text-muted"> (optional)</em><br />
            <%= summary_form.text_field :linked_in, placeholder: 'Share your LinkedIn profile', class: 'form-control mb-3' %>
          </div>
          <div class="col-md field">
            <%= summary_form.label :github, class: 'form-label text-muted' %>
            <em class="text-muted"> (optional)</em><br />
            <%= summary_form.text_field :github, placeholder: 'Share your Github profile', class: 'form-control mb-3' %>
          </div>
        </div>
      <% end %>

      <div class="row">
      <div class="col-md field">
        <%= f.label :profile_picture, class: 'form-lable text-muted mb-2' %><em class="text-muted"> (optional)</em><br />
        <%= f.file_field :avatar, class: 'form-control mb-3', accept:'image/*' %>
      </div>

      <div class="col-md field">
        <%= f.label :current_password, class: 'form-label text-muted' %> <i class="text-muted fs-xsmall">(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", required: true, class: 'form-control mb-3' %>
      </div>
      </div>

      <div class="field">
        <%= f.check_box :is_subscriber, class: 'form-check-input' %>
        <%= f.label :subscribe_to_monthly_news_letter, class: 'form-label text-muted' %>
      </div>

      <div class="actions my-2 text-center">
        <%= f.submit "Update", class: 'btn btn-success w-100' %>
      </div>
    <% end %>

    <div class="container">
      <div class="row text-secondary">
        <div class="col-md p-0"><hr class="text-muted"></div>
        <span class="col-md p-0 text-center align-self-center"> Or continue with </span>
        <div class="col-md p-0 "> <hr class="text-muted"></div>
      </div>
    </div>

    <h5 class="fw-bolder">Cancel your account</h5>
    <div> 
      <%= button_to '<i class="bi bi-trash"></i> Cancel my account'.html_safe, registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %>
    </div>
  </div>
</div>