<footer class="text-center text-lg-start border-top">
  <div class="container p-4">
    <div class="row">
      <div class="col-md-2">
        <%= image_tag 'favicon.png', class: 'max-size-fill-available' %>
      </div>
      <div class="col-md-2">
        <div class="fw-semibold mb-3">PAGES</div>
        <ul class="nav flex-column">
          <li class="nav-item mb-2 hover-pad"><%= link_to '<i class="bi bi-book"></i> BLOGS'.html_safe, root_path, class: "text-decoration-none fw-normal fs-14px text-dark" %></li>
          <li class="nav-item mb-2 hover-pad"><%= link_to '<i class="bi bi-tags"></i> CATEGORIES'.html_safe, categories_path, class: "text-decoration-none fw-normal fs-14px text-dark" %></li>
        </ul>
      </div>
      <div class="col-md-3">
        <div class="fw-semibold mb-3">ABOUT US</div>
        <ul class="nav flex-column">
          <li class="nav-item mb-2 hover-pad"><%= link_to '<i class="bi bi-info-circle"></i> ABOUT US'.html_safe, about_page_path, class: "text-decoration-none fw-normal fs-14px text-dark" %></li>
          <li class="nav-item mb-2 hover-pad"><%= link_to '<i class="bi bi-envelope-fill"></i> CONTACT US'.html_safe, contact_page_path, class: "text-decoration-none fw-normal fs-14px text-dark" %></li>
          <li class="nav-item mb-2 hover-pad"><%= link_to "<i class='bi bi-question-circle'></i> FAQ's".html_safe, faqs_page_path, class: "text-decoration-none fw-normal fs-14px text-dark" %></li>
        </ul>
      </div>
      <div class="col-md-5">
        <div class="fw-semibold mb-3">Subscribe to our monthly newsletter</div>
        <div class="fs-14px mb-4 fw-light">Receive a monthly email packed with the newest news, articles, and useful resources. Stay up to date effortlessly!</div>
          <%= form_with url: subscribe_path, class: 'row g-3' do |form| %>
            <div class="col-lg-8">
              <%= form.text_field :email, placeholder: 'Enter your email', autocomplete: 'off', required: true, class: 'form-control'%>
            </div>
            <div class="col-lg-4">
              <%= form.submit "Subscribe", class: 'btn btn-primary' %>
            </div>
          <% end %>
      </div>
    </div>
  </div>

  <div class="container d-flex justify-content-between pt-3 border-top">
    <p class="fw-light fs-14px">&copy; 2023 Education Courier. All rights reserved.</p>
    <ul class="list-unstyled d-flex mb-2">
      <li class="ms-3"><a class="link-dark" href="https://github.com/usman-zulfiqar065" target = "_blank"><i class="bi bi-github fs-3 text-secondary"></i></a></li>
      <li class="ms-3"><a class="link-dark" href="https://www.linkedin.com/in/usman-zulfiqar/" target = "_blank"><i class="bi bi-linkedin fs-3 text-secondary"></i></a></li>
    </ul>
  </div>
</footer>
