<nav class="navbar navbar-expand-lg navbar-light border-bottom px-lg-5 sticky-top">
  <div class="container-fluid mx-lg-5">
    <%= image_tag("favicon.png", class: "navbar-brand") %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0 mx-auto">
        <li class="nav-item">
          <%= link_to 'Blogs', root_path, class: "text-decoration-none px-lg-4 fw-semibold fs-14px #{ active_tab(controller_name, action_name, 'Blogs') }" %>
        </li>
        <li class="nav-item">
          <%= link_to 'Categories', categories_path, class: "text-decoration-none px-lg-4 fw-semibold fs-14px #{ active_tab(controller_name, action_name, 'Categories') }" %>
        </li>
        <li class="nav-item dropdown">
          <a class="text-decoration-none dropdown-toggle fs-14px px-lg-4 fw-semibold" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            About Us
          </a>
          <div class="dropdown-menu rounded-3 shadow-sm p-2" aria-labelledby="navbarDropdownMenuLink">
            <%= link_to '<i class="bi bi-info-circle"></i> About us'.html_safe, about_page_path, class: "dropdown-item rounded-2 mb-2" %>
            <%= link_to '<i class="bi bi-envelope-fill"></i> Contact us'.html_safe, contact_page_path, class: "dropdown-item rounded-2 mb-2" %>
            <%= link_to "<i class='bi bi-question-circle'></i> FAQ's".html_safe, faqs_page_path, class: "dropdown-item rounded-2" %>
          </div>
        </li>
      </ul>
      <ul class="navbar-nav mb-2 mb-lg-0">
        <li class="nav-item align-self-lg-center">
          <%= add_start_writing_btn('btn btn-primary text-white') %>
        </li>
        
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= image_tag(set_navbar_user_url, class: "rounded-circle nav-avatar") %>
          </a>
          <div class="dropdown-menu rounded-3 shadow-sm p-2" aria-labelledby="navbarDropdown">
            <% if user_signed_in? %>
              <% if current_user.blogger? || current_user.admin? %>
                <%= link_to '<i class="bi bi-person-check-fill"></i> Admin Pannel'.html_safe, admin_root_path, class: "dropdown-item rounded-2 mb-2"%>
