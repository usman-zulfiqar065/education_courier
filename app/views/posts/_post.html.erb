<div class="row post-cart mb-5">
  <div class="col-md-8">
    <div class="pb-2">
      <%= image_tag("user_avatar.png", class: "rounded-circle post-circle-img") %> 
      <span class="fw-semibold"><%= post.user.name %></span>
      <% if post.draft? %><span class="badge badge-danger bg-danger ps-2">Draft</span><% end %>
      <% if post.scheduled? %><span class="badge badge-danger bg-danger ps-2">Scheduled</span><% end %>
    </div>
    <a href="<%= "posts/#{post.id}" %>", class="text-decoration-none" data-turbo-frame="_top" >
      <h5 class="fw-bold"><%= post.title %></h5>
      <div class="text-muted mb-2 short-summary"><%= post.summary %> ...</div>
    </a>
    <small class="text-muted">
      <%= date_format(post.published_at) if post.published_at.present? %> | 
      <%= post.read_time %> min read | 
      <%= link_to post.category.name, post.category, class: "border text-decoration-none rounded-pill px-2 py-1 light-gray text-center", 
      data: { turbo_frame: "posts-list" } %>
    </small>
  </div>
  <div class="col-md-4">
    <%= image_tag("post-default-avatar.jpg", class: "post-thumbnail mt-2")%> 
  </div>
</div>
